{
  "name": "YouTube AV Sync",
  "version": "0.0.4",
  "manifest_version": 2,
  "description": "Fix audio delay on Youtube when streaming audio",
  "offline_enabled": true,
  "icons": {
    "19": "img/icon19.png",
    "38": "img/icon38.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
 
  "background": {
    "scripts": ["js/background.js", "js/eventPage.js"]
  },
  "permissions": [ 
	"webRequest",
    "*://*.googlevideo.com/*",
	"*://*.youtube.com/*",
    "storage"
  ],
  "browser_action": {
    "default_title": "YouTube AV Sync"
  },
  "content_scripts": [
    {
      "matches": [
		"*://*.youtube.com/*"
		],
      "js": [ "js/content-script.js" ],
      "run_at": "document_start"      
    }
  ],
  "options_page": "html/options.html"
}
